{
    "name": "cybalex/fee-calc-app",
    "description": "Skeleton for FeeCalcApp",
    "keywords": ["finance", "payments", "banking"],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "FeeCalcApp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FeeCalcApp\\": "tests"
        },
        "classmap": [
            "app/App.php",
            "app/AppFactory.php",
            "app/AppInterface.php",
            "app/AppTest.php"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "php-di/php-di": "^6.3",
        "symfony/console": "^5.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "pcov/clobber": "^2.0",
        "phpunit/phpunit": "^6.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"],
        "test-coverage": [
            "bin/pcov clobber",
            "@phpunit --coverage-html var/reports/coverage --coverage-clover var/reports/coverage/coverage.xml tests"
        ]
    }
}
