{
    "name": "cybalex/fee-calc-app",
    "description": "Skeleton for FeeCalcApp",
    "keywords": ["finance", "payments", "banking"],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "FeeCalcApp\\": "src"
        },
        "classmap": [
            "app/App.php",
            "app/AppFactory.php",
            "app/AppInterface.php",
            "app/AppTest.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "FeeCalcApp\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/common": "^3.1",
        "doctrine/migrations": "^3.2",
        "doctrine/orm": "^2.10",
        "doctrine/persistence": "^2.2",
        "guzzlehttp/guzzle": "^7.3",
        "symfony/cache": "^5.3",
        "symfony/config": "^5.3",
        "symfony/console": "^5.3",
        "symfony/dependency-injection": "^5.3",
        "symfony/validator": "^5.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "pcov/clobber": "^2.0",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "cs-fix": "@fix-cs",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "cs-test": "@test-cs",
        "test": ["@phpunit", "@test-cs"],
        "test-coverage": [
            "bin/pcov clobber",
            "@phpunit --coverage-html var/reports/coverage --coverage-clover var/reports/coverage/coverage.xml tests"
        ],
        "coverage-test": "@test-coverage",
        "clear-logs": "rm -f var/log/logs.txt",
        "run-app": "php -f public/script.php fee.calculate --file=etc/input.csv"
    }
}
